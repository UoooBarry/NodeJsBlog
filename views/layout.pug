doctype html
html
  head
    title= title
    script(src="/javascripts/jquery.js")
    script(src="/javascripts/bootstrap.min.js")
    script(src="/javascripts/bootstrap.bundle.min.js")
    script(src="/javascripts/main.js")
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
  body
    nav(class='navbar navbar-expand-lg navbar-dark bg-dark')
      div(class='collapse navbar-collapse')
        ul(class='navbar-nav mr-auto')
          li(class='nav-item')
            a(class='nav-link' href='/') Home
          li(class='nav-item')
            a(class='nav-link' href='/articles') Articles
        if session_helper.get_current_name()
          li(class="dropdown" style="list-style-type:none;padding-right: 5px; cursor:pointer;")
            a(class="dropdown-toggle" data-toggle="dropdown") #{session_helper.get_current_name()} <b class="caret"></b>
            ul(class='dropdown-menu')
              a(class='nav-item' href='/signout') Sign out
        else
          a(class='nav-link' href='/signin') Sign in
          a(class='nav-link' href='/register') Register
        
    div(class="container" style="padding-top: 5px")
      != messages('shared/message', locals)
      if (errors)
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}
      block content

  div(class="row")
    footer
      hr
      p Author: Yongqian Huang